<main class="is-preload">
        <section id="administracion" class="main special">

			<div id="wrapper">
			<!-- Nav -->
				<nav id="nav">
					<ul>
						<label><li>Bienvenido (a)  : {{nombre}} </li> </label>
                        <li><a href="/editarPerfil" class="">Editar perfil</a></li>
						<li><a href="/cuenta/nueva" class="">Nuevo Registro</a></li>
                        <li><a href="/cerrarSesion" class="active">Cerrar Sesión</a></li>

					</ul>
				</nav>		

				<!-- Principal -->
					<div id="main">
						<section id="descripcion" class="main">
								<div class="spotlight">
									<div class="content">
										<header class="major"><br>
											<h2>Tus Cuentas</h2>
										</header>

                                        <div class="">
                                            {{#if cuentas.length}}
                                            {{#each cuentas}}
                                            <div class="caja">
                                                <h3>Nombre: {{nombre}}</h3>
                                                <h3>Monto : {{monto}}</h3>
                                            </div>
                                            <div class="">
                                                <a href="/cuenta/editar/{{url}}" class="">Editar</a>
                                            </div>
                                            <div class="">
                                                <a href="#" data-eliminar="{{id}}" class="">Eliminar</a>
                                            </div>
                                            {{/each}}
                                            {{else}}
                                            <p>Aún no tienes cuentas registradas</p>
                                            {{/if}}
                                        </div>
									</div>
								</div>
						</section>
					</div>
			</div>
        </section>
</main>

