<body>
        <div id="wrapper">

				<!-- Encabezados -->
					<header id="header" class="alt">
						<span class="logo"><img src="images/logo.svg" alt="" /></span>
						<h1>{{nombrePagina}}</h1>
						{{#if tagline}}
                            <p class="tagline">{{tagline}}</p>
                        {{/if}}
					</header>

                <!-- Barra de navegacion -->
					<nav id="nav">
						<ul>
							<li><a href="#descripcion" class="active">Descripción</a></li>
							<li><a href="#inicioSesion">Iniciar Sesión</a></li>
							<li><a href="#crearCuenta">Crear Cuenta</a></li>
						</ul>
					</nav>

                <!-- Principal -->
					<div id="main">

                <!-- Descripcion -->
							<section id="descripcion" class="main">
								<div class="spotlight">
									<div class="content">
										<header class="major">
											<h2>{{nombrePagina}}</h2>
										</header>
										<p>{{descripcion}}.</p>
									</div>
									<span class="image"><img src="../../public/images/FP.jpg" alt="" /></span>
								</div>
							</section>

                <!-- Iniciar Sesión -->
							<section id="inicioSesion" class="main">
								<div class="spotlight">
									<div class="content">
										<header class="major">
											<h2>{{nombrePagina}}</h2>
										</header>
										<p>{{inicioSesion}}.</p>
                                        <a href="/usuario/accesoUsuario" class="button primary">Iniciar sesión</a>
									</div>
									<span class="image"><img src="../../images/pic02.jpg" alt="" /></span>
								</div>
							</section>

                <!-- Crear Cuenta -->
							<section id="crearCuenta" class="main">
								<div class="spotlight">
									<div class="content">
										<header class="major">
											<h2>{{nombrePagina}}</h2>
										</header>
										<p>{{crearCuenta}}.</p>
                                        <a href="/usuario/nuevoUsuario" class="button primary">Crear nueva cuenta</a>
									</div>
									<span class="image"><img src="images/pic01.jpg" alt="" /></span>
								</div>
